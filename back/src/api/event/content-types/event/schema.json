{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "starts": {
      "type": "datetime",
      "required": true
    },
    "ends": {
      "type": "datetime",
      "required": true
    },
    "marquee": {
      "type": "richtext",
      "default": "The Hmm || ",
      "required": true
    },
    "info": {
      "type": "richtext"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "accent": {
      "type": "string",
      "default": "rgb(255,255,255)",
      "regex": "[Hh][Ss][Ll][\\(](((([\\d]{1,3}|[\\d\\%]{2,4})[\\,]{0,1})[\\s]*){3})[\\)]"
    },
    "showViewerCount": {
      "type": "enumeration",
      "enum": [
        "no",
        "number",
        "dots"
      ]
    },
    "highlightDonateButton": {
      "type": "boolean",
      "default": false
    },
    "chatPlaybackDelay": {
      "type": "decimal"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "event"
    },
    "announcements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::announcement.announcement",
      "inversedBy": "events"
    },
    "viewers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::viewer.viewer",
      "inversedBy": "events"
    },
    "emoji_groups": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::emoji-group.emoji-group",
      "inversedBy": "events"
    },
    "recording": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::mux-video-uploader.mux-asset"
    },
    "allowEmoji": {
      "type": "boolean",
      "default": true
    }
  }
}
