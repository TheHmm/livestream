{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Events",
    "description": "The Hmm livestream events"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "starts": {
      "type": "datetime",
      "required": true
    },
    "ends": {
      "type": "datetime",
      "required": true
    },
    "marquee": {
      "type": "richtext",
      "required": true,
      "default": "The Hmm || "
    },
    "info": {
      "type": "richtext"
    },
    "accent": {
      "type": "string",
      "default": "hsl(240, 100%, 50%)",
      "regex": "[Hh][Ss][Ll][\\(](((([\\d]{1,3}|[\\d\\%]{2,4})[\\,]{0,1})[\\s]*){3})[\\)]"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "event"
    },
    "announcements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::announcement.announcement",
      "inversedBy": "events"
    },
    "viewers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::viewer.viewer",
      "inversedBy": "events"
    },
    "emoji_groups": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::emoji-group.emoji-group",
      "inversedBy": "events"
    },
    "allowEmoji": {
      "type": "boolean",
      "default": true
    },
    "count": {
      "type": "integer"
    },
    "mux_recording": {
      "type": "json"
    },
    "default_player_mode": {
      "type": "enumeration",
      "default": "video",
      "enum": [
        "video",
        "audio",
        "thumbs",
        "transcript"
      ]
    },
    "later_visits": {
      "type": "integer",
      "min": 0
    },
    "releaseDots": {
      "type": "boolean",
      "default": false
    },
    "livestream": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::livestream.livestream",
      "inversedBy": "events"
    },
    "show_in_agenda": {
      "type": "boolean",
      "default": true
    }
  }
}
